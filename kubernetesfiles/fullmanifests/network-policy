# denies all inbound and outbound traffic for all pods

---
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: deny-all
spec:
  podSelector: {}
  policyTypes:
    - Ingress
    - Egress

kubectl get netpol
kubectl delete netpol --all

