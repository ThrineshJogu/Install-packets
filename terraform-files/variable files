vi provider.tf

provider "aws" {
  region= "eu-north-1
}

vi resource.tf

resource "aws_instance" "myserver" {
  tags= {
    Name= var.iname
  }
  ami= var.iami
  instance_type= var.itype
  count= var.icount
  root_block_device{
    volume_size= var.ivolume
  }
}

vi variable.tf

variable "iname" {
  description= "This is my instance name"
  type= string
  default= "myserver"
}

variable "iami" {
  type= string
  default= "ami-0854d4f8e4bd6b834"
}
variable "itype" {
  type= string
  default= "t3.micro"
}
variable "icount" {
  type= number
  default= 3
}
variable "itype" {
  type= number
  default= "8"
}


vi output.tf

output "myoutput" {
  value = [aws_instance.myserver[0].id,aws_instance.myserver[1].id,aws_instance.myserver[2].id]
}

terraform init
terraform fmt
terraform plan
terraform apply --auto-approve
terraform destroy --auto-approve --target=aws_instance.myserver[1]
terraform destroy --auto-approve


  
    
    
