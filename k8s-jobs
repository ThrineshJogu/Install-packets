---
apiVersion: batch/v1
kind:CronJob
metadata:
  name:flm
spec:
  schedule: " * * * * *"
  jobTemplate:
    spec:
      template:
        spec:
          containers:
            - name: cont-1
              image: ubuntu
            command: ["/bin/bash", "-c", "sudo apt update -y; sleep 30"]
          restartPolicy: Never
